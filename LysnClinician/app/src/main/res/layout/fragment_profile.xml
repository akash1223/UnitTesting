<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.lysn.clinician.ui.profile.ProfileViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_shadow_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp16"
            android:paddingTop="@dimen/dp20"
            android:paddingEnd="@dimen/dp16"
            android:paddingBottom="@dimen/dp20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <ImageView
                android:id="@+id/img_view_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_settings"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_view_settings"
                style="@style/IBMPLEX.MEDIUM.17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp16"
                android:text="@string/settings_text"
                app:layout_constraintLeft_toRightOf="@+id/img_view_settings"
                app:layout_constraintTop_toTopOf="@+id/img_view_settings" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/IBMPLEX.15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp16"
                android:text="Placeholder"
                android:textColor="@color/dialog_message"
                app:layout_constraintBottom_toBottomOf="@+id/img_view_settings"
                app:layout_constraintLeft_toRightOf="@+id/img_view_settings" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider_settings"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:background="@color/horizontalDivider"
            app:layout_constraintTop_toBottomOf="@+id/constraint_settings" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.onLogoutUserClickListener()}"
            android:paddingStart="@dimen/dp16"
            android:paddingTop="@dimen/dp20"
            android:paddingEnd="@dimen/dp16"
            android:paddingBottom="@dimen/dp20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraint_settings">

            <ImageView
                android:id="@+id/img_view_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_settings"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_view_logout"
                style="@style/IBMPLEX.MEDIUM.17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp16"
                android:text="@string/logout_text"
                app:layout_constraintLeft_toRightOf="@+id/img_view_logout"
                app:layout_constraintTop_toTopOf="@+id/img_view_logout" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/IBMPLEX.15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp16"
                android:text="@string/logout_user_text"
                android:textColor="@color/dialog_message"
                app:layout_constraintBottom_toBottomOf="@+id/img_view_logout"
                app:layout_constraintLeft_toRightOf="@+id/img_view_logout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider_logout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp16"
            android:background="@color/horizontalDivider"
            app:layout_constraintTop_toBottomOf="@+id/constraint_logout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>