<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp16"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_btn_dismiss"
        style="@style/actionIcon"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txt_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textHeading"
        android:text="@string/help_troubleshooting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_dismiss"
        />
    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/IBMPLEX.17sp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/coming_soon"
        app:layout_constraintTop_toBottomOf="@+id/txt_screen_title"
        />


</androidx.constraintlayout.widget.ConstraintLayout>