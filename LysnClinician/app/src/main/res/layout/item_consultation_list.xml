<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_con"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp4"
        android:clickable="true"
        android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp2"
        app:cardCornerRadius="@dimen/dp10"
        android:clickable="true"
        android:layout_margin="@dimen/dp4"
        app:cardBackgroundColor="@color/white"
        android:background="?android:attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/dp16">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_client_name"
                style="@style/IBMPLEX.MEDIUM.17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Client name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_date_time"
                style="@style/IBMPLEX.15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp8"
                app:layout_constraintStart_toStartOf="@+id/txt_client_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_client_name"
                tools:text="Sunday, 12 July, 6:30pm" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_session_status"
                style="@style/IBMPLEX.MEDIUM.12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp8"
                app:layout_constraintStart_toStartOf="@+id/txt_client_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_date_time"
                app:textAllCaps="true"
                tools:text="Confirmed" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_duration"
                style="@style/IBMPLEX.15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp8"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="60 min" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
