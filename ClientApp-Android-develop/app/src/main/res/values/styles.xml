<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="homeAsUpIndicator">@drawable/icon_back_button_arrow</item>
    </style>

    <style name="NoActionBarWithTransparentStatusBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="fullScreen" parent="@style/Theme.MaterialComponents.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="roundCornerEditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/darkFontColor</item>
        <item name="hintTextColor">@color/darkFontColor</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="errorTextColor">@color/errorRed</item>
        <item name="errorIconDrawable">@drawable/icon_edit_input_error</item>
        <item name="errorIconTint">@color/errorRed</item>
        <item name="boxStrokeColor">@color/editTextFocusColor</item>
        <item name="boxStrokeWidthFocused">@dimen/dp1</item>
    </style>

    <style name="textViewHeading" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp24</item>
        <item name="android:textColor">@color/darkFontColor</item>
        <item name="android:fontFamily">@font/ibmplex_sans_fonts_semibold</item>
    </style>

    <style name="toolbarText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textColor">@color/darkFontColor</item>
        <item name="android:fontFamily">@font/ibmplex_sans_fonts_semibold</item>
        <item name="android:lineSpacingExtra">@dimen/sp8</item>
    </style>

    <style name="subHeading" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/darkFontColor</item>
        <item name="android:fontFamily">@font/ibmplex_sans_fonts_text
        </item>
    </style>

    <style name="subHeadingFontMedium" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/darkFontColor</item>
        <item name="android:fontFamily">@font/ibmplex_sans_fonts_medium</item>
    </style>

    <style name="dass21_subHeading" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:textColor">@color/dass21TextFontColor</item>
        <item name="android:fontFamily">@font/ibmplex_sans_fonts_text
        </item>
    </style>

    <style name="submitButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp60</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="lineHeight">@dimen/sp20</item>
        <item name="cornerRadius">@dimen/dp24</item>
        <item name="android:lineSpacingExtra">@dimen/sp4</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="backgroundColor">@color/submitButtonEnableColor</item>
        <item name="android:textColor">@color/submitButtonEnableTextColor</item>
        <item name="android:fontFamily">@font/ibmplex_sans_fonts_semibold</item>
    </style>

    <style name="edit_option_radio_button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="lineHeight">@dimen/sp24</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="buttonTint">@color/selector_radio_button_color</item>
        <item name="android:lineSpacingExtra">@dimen/sp9</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textColor">@color/darkFontColor</item>
        <item name="android:fontFamily">@font/ibmplex_sans_fonts_medium</item>
    </style>

    <style name="assessment_option_radio_button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp55</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="lineHeight">@dimen/sp20</item>
        <item name="cornerRadius">@dimen/dp24</item>
        <item name="android:lineSpacingExtra">@dimen/sp4</item>
        <item name="textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">@color/selector_ass_option_text_color</item>
        <item name="android:fontFamily">@font/ibmplex_sans_fonts_semibold</item>
        <item name="android:layout_marginBottom">@dimen/dp16</item>
    </style>

    <style name="actionIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:tint">@color/actionIconColor</item>
    </style>

    <style name="checkbox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/assessmentCheckBoxCorner</item>
        <item name="colorControlActivated">@color/assessmentFillCheckBox</item>
    </style>

    <style name="MyRounded.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CustomDialog.Rounded
        </item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CustomDialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp10</item>
    </style>

    <!--Wizard Screen-->
    <style name="wizardLogo">
        <item name="android:layout_width">@dimen/dp64</item>
        <item name="android:layout_height">@dimen/dp64</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp12</item>
        <item name="android:background">@drawable/intro</item>
    </style>

    <style name="wizardPlaceHolder">
        <item name="android:layout_width">@dimen/dp148</item>
        <item name="android:layout_height">@dimen/dp200</item>
        <item name="android:background">@drawable/placeholder</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
