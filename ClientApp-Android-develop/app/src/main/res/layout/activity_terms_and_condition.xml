<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.CreatePasswordFragment">

    <data>

        <variable
            name="viewModel"
            type="com.example.lysnclient.viewmodel.TermsConditionViewModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/term_condition_layout"
        android:background="@color/authScreenBackground">

        <LinearLayout
            android:layout_above="@id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/toolbarColor"
                app:titleTextColor="@android:color/white">

                <ImageView
                    android:id="@+id/img_close_verify_screen"
                    style="@style/actionIcon"
                    android:contentDescription="@string/content_close_icon"
                    android:onClick="@{()->viewModel.navigateBack()}"
                    android:src="@drawable/icon_back_button_arrow" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/toolbar_title"
                    style="@style/toolbarText"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp16"
                    android:gravity="center"
                    android:text="@string/terms_and_conditions_heading" />

            </androidx.appcompat.widget.Toolbar>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/toolbar_shadow"
                />
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/authScreenBackground"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/dp16">


                    <com.google.android.material.textview.MaterialTextView
                        style="@style/textViewHeading"
                        android:layout_marginBottom="@dimen/dp16"
                        android:text="@string/review_terms_and_conditions" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/subHeading"
                        android:ellipsize="marquee"
                        android:layout_marginBottom="@dimen/dp8"
                        android:lineSpacingExtra="5dp"
                        android:text="@string/terms_Condition_text"
                        android:textSize="@dimen/sp18" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReview"
            style="@style/submitButton"
            android:onClick="@{()->viewModel.onBtnReviewAndAcceptTermsClick()}"
            android:layout_margin="@dimen/sp16"
            android:text="@{viewModel.onReviewObservable? @string/accept_terms : @string/review}" />
        </LinearLayout>

    </RelativeLayout>
</layout>