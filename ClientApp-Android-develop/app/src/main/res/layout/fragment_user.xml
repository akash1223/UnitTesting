<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.UserFragment">

    <data>

        <variable
            name="myAdapter"
            type="com.example.lysnclient.adapters.AdapterUserDashboard" />

        <variable
            name="viewModel"
            type="com.example.lysnclient.viewmodel.HomeDashboardViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/dashboard_user_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@animator/toolbar_elevation"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/toolbarColor"
                app:titleTextColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgView_help"
                        style="@style/actionIcon"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/content_close_icon"
                        android:src="@drawable/ic_icon_lysn_help" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/toolbar_title"
                        style="@style/toolbarText"
                        android:layout_centerInParent="true"
                        android:layout_toStartOf="@+id/imgView_setting"
                        android:layout_toEndOf="@+id/imgView_help"
                        android:gravity="center"
                        android:text="@string/you" />

                    <ImageView
                        android:id="@+id/imgView_setting"
                        style="@style/actionIcon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp16"
                        android:contentDescription="@string/content_close_icon"
                        android:src="@drawable/ic_icon_lysn_settings" />
                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp16"
                android:paddingTop="@dimen/dp24"
                android:paddingEnd="@dimen/dp16">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_review_assessment_heading"
                    style="@style/textViewHeading"
                    android:layout_marginStart="@dimen/dp3"
                    android:layout_marginBottom="@dimen/dp24"
                    android:lineSpacingExtra="@dimen/sp8"
                    android:text="@string/placeholder_text"
                    android:textColor="@color/blueTextColor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_user_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adapter="@{myAdapter}"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</layout>