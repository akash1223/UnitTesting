<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="myAdapter"
            type="com.example.lysnclient.adapters.AdapterReviewAssessmentList" />

        <variable
            name="viewModel"
            type="com.example.lysnclient.viewmodel.ReviewAssessmentViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/assessment_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/assessmentBackground"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp16"
            tools:context=".view.ReviewAssessmentActivity">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:layout_above="@id/bottom_card_view_data">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp16"
                    android:paddingTop="@dimen/dp88"
                    android:paddingEnd="@dimen/dp16"
                    android:paddingBottom="@dimen/dp10"
                    android:descendantFocusability="blocksDescendants">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_review_assessment_heading"
                        style="@style/textViewHeading"
                        android:layout_marginBottom="@dimen/dp24"
                        android:text="@string/review_assessment_heading" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_review_assessment_title"
                        style="@style/subHeadingFontMedium"
                        android:text="@string/review_assessment_title" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_assessment_title"
                        style="@style/subHeading"
                        android:layout_marginBottom="@dimen/dp18"
                        android:textColor="@color/greyFontColor" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_image_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adapter="@{myAdapter}"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bottom_card_view_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/assessmentPrivacyBackground"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp16"
                    android:paddingTop="@dimen/dp12"
                    android:paddingRight="@dimen/dp16">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp12">

                        <CheckBox
                            android:id="@+id/chk_box_accept_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp3"
                            android:layout_marginEnd="@dimen/dp15"
                            android:gravity="center"
                            android:scaleX="1.4"
                            android:scaleY="1.4"
                            android:theme="@style/checkbox" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/subHeading"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/chk_box_accept_policy"
                            android:padding="@dimen/dp5"
                            android:text="@string/accept_review_assessment_text" />

                    </RelativeLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_begin_assessment"
                        style="@style/submitButton"
                        android:backgroundColor="@{viewModel.isCheck?@color/submitButtonEnableColor :@color/submitButtonDisableColor}"
                        android:clickable="@{viewModel.isCheck? true :false}"
                        android:enabled="@{viewModel.isCheck? true :false}"
                        android:onClick="@{()->viewModel.onBtnSubmitAssessmentClick()}"
                        android:text="@string/review_submit_assessment_text" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_close_button"
            style="@style/actionIcon"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:background="@drawable/back_close_button_circle"
            android:contentDescription="@string/navigate_previous_screen"
            android:elevation="@dimen/dp4"
            android:onClick="@{()->viewModel.navigateOnClose()}"
            android:padding="@dimen/dp12"
            android:src="@drawable/icon_close" />

    </FrameLayout>
</layout>