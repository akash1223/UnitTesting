<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="String" />

        <variable
            name="viewModel"
            type="com.example.lysnclient.viewmodel.WBTOutputScreenViewModel" />


    </data>

    <RelativeLayout
        android:id="@+id/lnr_lyt_assessment_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp11"
        android:paddingEnd="@dimen/dp11">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplex_sans_fonts_semibold"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:lineHeight="@dimen/sp32"
            android:lineSpacingExtra="8sp"
            android:text="@{item.trim()}"
            android:textColor="@color/wbtTextColor"
            android:textSize="@dimen/sp24"
            tools:text="@string/dummy" />

    </RelativeLayout>
</layout>