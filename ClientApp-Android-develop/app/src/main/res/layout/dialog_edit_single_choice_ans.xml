<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.SingleChoiceQueFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.lysnclient.viewmodel.ReviewAssessmentViewModel" />

        <variable
            name="assessmentAnswer"
            type="com.example.lysnclient.model.AssessmentAnswer" />

        <variable
            name="optionList"
            type="java.util.ArrayList&lt;com.example.lysnclient.model.OptionType&gt;" />

        <variable
            name="quePosition"
            type="int" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp16"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/single_choice_que_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp24"
                android:ellipsize="end"
                android:fontFamily="@font/ibmplex_sans_fonts_medium"
                android:lineSpacingExtra="@dimen/sp9"
                android:paddingStart="@dimen/dp24"
                android:paddingEnd="@dimen/dp24"
                android:text="@{assessmentAnswer.questionLabel}"
                android:textColor="@color/darkFontColor"
                android:textSize="@dimen/sp17"
                app:lineHeight="@dimen/sp26" />

            <RadioGroup
                android:id="@+id/radio_group_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp24"
                android:paddingEnd="@dimen/dp24">

                <RadioButton
                    android:id="@+id/rdo_btn_option1"
                    style="@style/edit_option_radio_button"
                    android:paddingStart="@dimen/dp20"
                    android:paddingEnd="@dimen/dp0"
                    android:text='@{optionList.size()>=1 ? optionList.get(0).label:""}'
                    android:visibility="@{optionList.size() >= 1?  View.VISIBLE:View.GONE}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/singleChoiceOptionBackColor"
                    android:visibility="@{optionList.size() >= 2?  View.VISIBLE:View.GONE}" />

                <RadioButton
                    android:id="@+id/rdo_btn_option2"
                    style="@style/edit_option_radio_button"
                    android:minWidth="@dimen/dp50"
                    android:minHeight="@dimen/dp50"
                    android:paddingEnd="@dimen/dp0"
                    android:paddingStart="@dimen/dp20"
                    android:text='@{optionList.size()>=2 ? optionList.get(1).label:""}'
                    android:visibility="@{optionList.size() >= 2?  View.VISIBLE:View.GONE}" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/singleChoiceOptionBackColor"
                    android:visibility="@{optionList.size() >= 3?  View.VISIBLE:View.GONE}" />

                <RadioButton
                    android:id="@+id/rdo_btn_option3"
                    style="@style/edit_option_radio_button"
                    android:paddingStart="@dimen/dp20"
                    android:paddingEnd="@dimen/dp0"
                    android:text='@{optionList.size()>=3 ? optionList.get(2).label:""}'
                    android:visibility="@{optionList.size() >= 3?  View.VISIBLE:View.GONE}" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/singleChoiceOptionBackColor"
                    android:visibility="@{optionList.size() >= 4?  View.VISIBLE:View.GONE}" />

                <RadioButton
                    android:id="@+id/rdo_btn_option4"
                    style="@style/edit_option_radio_button"
                    android:paddingStart="@dimen/dp20"
                    android:paddingEnd="@dimen/dp0"
                    android:text='@{optionList.size()>=4 ? optionList.get(3).label:""}'
                    android:visibility="@{optionList.size() >= 4?  View.VISIBLE:View.GONE}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/singleChoiceOptionBackColor"
                    android:visibility="@{optionList.size() >= 5?  View.VISIBLE:View.GONE}" />

                <RadioButton
                    android:id="@+id/rdo_btn_option5"
                    style="@style/edit_option_radio_button"
                    android:paddingStart="@dimen/dp20"
                    android:paddingEnd="@dimen/dp0"
                    android:text='@{optionList.size()>=5 ? optionList.get(4).label:""}'
                    android:visibility="@{optionList.size() >= 5?  View.VISIBLE:View.GONE}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/singleChoiceOptionBackColor"
                    android:visibility="@{optionList.size() >= 6?  View.VISIBLE:View.GONE}" />

                <RadioButton
                    android:id="@+id/rdo_btn_option6"
                    style="@style/edit_option_radio_button"
                    android:paddingStart="@dimen/dp20"
                    android:paddingEnd="@dimen/dp0"
                    android:text='@{optionList.size()>=6 ? optionList.get(5).label:""}'
                    android:visibility="@{optionList.size() >= 6?  View.VISIBLE:View.GONE}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/singleChoiceOptionBackColor"
                    android:visibility="@{optionList.size() >= 7?  View.VISIBLE:View.GONE}" />
            </RadioGroup>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginTop="@dimen/dp12"
                android:background="@color/lineDivideGreyColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp55"
                android:paddingStart="@dimen/dp16"
                android:paddingEnd="@dimen/dp32">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp40"
                    android:layout_toStartOf="@+id/btn_ok"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="@font/ibmplex_sans_fonts_semibold"
                    android:gravity="center"
                    android:lineHeight="@dimen/sp20"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/cancel_title"
                    android:textAllCaps="false"
                    android:textColor="@color/darkFontColor"
                    android:textSize="@dimen/sp16"
                    tools:targetApi="p" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="@font/ibmplex_sans_fonts_semibold"
                    android:gravity="center"
                    android:lineHeight="@dimen/sp20"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/ok_title"
                    android:textAllCaps="false"
                    android:textColor="@color/darkFontColor"
                    android:textSize="@dimen/sp16"
                    tools:targetApi="p" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</layout>
