<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.lysnclient.viewmodel.AssessmentSubmittedViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/assessment_submitted_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/assessmentBackground"
        android:orientation="vertical"
        tools:context=".view.AssessmentSubmittedActivity">

        <ScrollView
            android:id="@+id/nested_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp16"
                android:paddingTop="@dimen/dp80"
                android:paddingEnd="@dimen/dp16"
                android:paddingBottom="@dimen/dp24">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_review_assessment_heading"
                    style="@style/textViewHeading"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp8"
                    android:gravity="center"
                    android:lineHeight="@dimen/sp32"
                    android:lineSpacingExtra="@dimen/sp8"
                    android:text="@string/assessment_submitted_title" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_review_assessment_title"
                    style="@style/subHeadingFontMedium"
                    android:layout_marginBottom="@dimen/dp24"
                    android:gravity="center"
                    android:lineHeight="@dimen/sp24"
                    android:lineSpacingExtra="@dimen/sp9"
                    android:paddingStart="@dimen/sp4"
                    android:paddingEnd="@dimen/sp4"
                    android:text="@string/assessment_submitted_sub_title" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/bottom_card_view_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/dp10"
                    app:cardElevation="@dimen/dp2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp24"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp96"
                                android:layout_height="@dimen/dp96"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dp24"
                                android:layout_marginBottom="@dimen/dp16"
                                android:background="@drawable/ic_icon_profile_placeholder"
                                android:contentDescription="@string/profile_picture_title" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_find_psychologist_title"
                                style="@style/textViewHeading"
                                android:layout_marginBottom="@dimen/dp8"
                                android:gravity="center"
                                android:lineHeight="@dimen/sp28"
                                android:lineSpacingExtra="@dimen/sp8"
                                android:text="@string/find_a_psychologist_title"
                                android:textSize="@dimen/sp20" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_find_psychologist_subtitle"
                                style="@style/subHeading"
                                android:layout_marginStart="@dimen/dp76"
                                android:layout_marginEnd="@dimen/dp76"
                                android:gravity="center"
                                android:lineHeight="@dimen/sp20"
                                android:lineSpacingExtra="@dimen/sp5"
                                android:paddingStart="@dimen/dp4"
                                android:paddingEnd="@dimen/dp4"
                                android:text="@string/find_a_psychologist_sub_title"
                                android:textColor="@color/greyFontColor" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_begin_assessment"
                            style="@style/submitButton"
                            android:layout_marginStart="@dimen/dp15"
                            android:layout_marginEnd="@dimen/dp15"
                            android:layout_marginBottom="@dimen/dp23"
                            android:onClick="@{()->viewModel.onBtnFindPsychologistClick()}"
                            android:text="@string/find_a_psychologist_title" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_return_home"
                    style="@style/textViewHeading"
                    android:layout_marginTop="@dimen/dp24"
                    android:gravity="center"
                    android:lineHeight="@dimen/sp20"
                    android:lineSpacingExtra="@dimen/sp4"
                    android:onClick="@{()->viewModel.navigateOnClose()}"
                    android:text="@string/back_button_title"
                    android:textSize="@dimen/sp16" />

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/img_close_button"
            style="@style/actionIcon"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp8"
            android:background="@drawable/back_close_button_circle"
            android:contentDescription="@string/navigate_previous_screen"
            android:elevation="@dimen/dp4"
            android:onClick="@{()->viewModel.navigateOnClose()}"
            android:padding="@dimen/dp12"
            android:src="@drawable/icon_close" />

    </FrameLayout>
</layout>