<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_welcome_lysn"
        style="@style/wizardPlaceHolder"
        android:layout_marginTop="@dimen/dp20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/wizard_heading"
        style="@style/textViewHeading"
        android:layout_marginTop="@dimen/dp20"
        android:paddingBottom="@dimen/dp8"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/sp8"
        android:text="@string/wizard_research_validated_tools"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_welcome_lysn"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/subHeadingFontMedium"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/sp9"
        android:text="@string/wizard_research_validated_tools_sub_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wizard_heading"/>

</androidx.constraintlayout.widget.ConstraintLayout>