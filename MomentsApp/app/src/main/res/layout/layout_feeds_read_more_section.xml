<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="feed"
            type="com.inmoment.moments.home.model.Feed" />

        <variable
            name="viewModel"
            type="com.inmoment.moments.home.ui.HomeViewModel" />

        <variable
            name="homeAction"
            type="com.inmoment.moments.home.ui.fragment.HomeUiAction" />

        <variable
            name="itemPosition"
            type="int" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topSectionClickEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp1">


        <LinearLayout
            android:id="@+id/ll_experience_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:padding="@dimen/dp4"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/positive_experience_light">

            <TextView
                android:id="@+id/txt_experience_score_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_semi_bold"
                android:textSize="22sp"
                android:layout_marginStart="@dimen/dp8"
                tools:text="74"
                tools:textColor="@color/program_color_green" />

            <TextView
                android:id="@+id/txt_experience_score_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp13"
                android:fontFamily="@font/ibm_plex_sans"
                android:text="@string/experience_score"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            app:layout_constraintTop_toBottomOf="@+id/ll_experience_score"
            tools:background="@color/program_color_green" />

        <TextView
            android:id="@+id/feedDateTimeDetailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/dp12"
            android:fontFamily="@font/ibm_plex_sans"
            android:textColor="@color/light_grayish_blue"
            android:textSize="@dimen/sp13"
            app:layout_constraintBottom_toBottomOf="@+id/space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/space"
            tools:text="28 Jun 2019 11:45 AM" />

        <TextView
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="  |  "
            android:textColor="@color/light_grayish_blue"
            android:textSize="@dimen/sp14"
            app:layout_constraintStart_toEndOf="@+id/feedDateTimeDetailTV"
            app:layout_constraintTop_toBottomOf="@+id/ll_experience_score" />

        <TextView
            android:id="@+id/feedLocationDetailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans"
            android:textColor="@color/light_grayish_blue"
            android:textSize="@dimen/sp13"
            app:layout_constraintBottom_toBottomOf="@+id/space"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toTopOf="@+id/space"
            tools:text="South Jordon, UT" />

        <TextView
            android:id="@+id/feedMessageTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/ibm_plex_sans"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginEnd="@dimen/dp12"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp12"
            android:textColor="@color/program_name_color"
            android:textSize="@dimen/sp16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feedLocationDetailTV"
            tools:text="@string/feed_comment_text" />

        <TextView
            android:id="@+id/readMoreTV"
            style="@style/BoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/read_more"
            android:layout_marginTop="@dimen/dp6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feedMessageTV" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
