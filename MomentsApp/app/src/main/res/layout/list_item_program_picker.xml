<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="14dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/programPickerLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_circular_program_picker_blue">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="@dimen/dp15"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingBottom="@dimen/dp15">

                    <ImageView
                        android:id="@+id/blueDotIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/oval"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/programDomainIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/shape_cloud_type"
                        android:fontFamily="@font/ibm_plex_sans_semi_bold"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingBottom="@dimen/dp1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp12"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/blueDotIV"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="EX" />


                    <TextView
                        android:id="@+id/programNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/ibm_plex_sans_semi_bold"
                        android:textColor="@color/program_name_color"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/programDomainIV"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Cell Center" />

                    <TextView
                        android:id="@+id/programTimePeriodTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/ibm_plex_sans"
                        android:text="3 Days "
                        android:textColor="@color/darkGrayishAzure"
                        android:textSize="13sp"
                        android:visibility="gone"
                        app:layout_constraintStart_toEndOf="@+id/programDomainIV"
                        app:layout_constraintTop_toBottomOf="@+id/programNameTV" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>