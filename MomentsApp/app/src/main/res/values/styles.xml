<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/divider_line_color</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/login_background</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@null</item>
        <!-- Use default Snackbar margins for top/left/right -->
        <item name="android:layout_marginTop">@dimen/mtrl_snackbar_margin</item>
        <item name="android:layout_marginLeft">@dimen/mtrl_snackbar_margin</item>
        <item name="android:layout_marginRight">@dimen/mtrl_snackbar_margin</item>
        <!-- Custom bottom margin, this could work for top/left/right too -->
        <item name="android:layout_marginBottom">100dp</item>
    </style>

    <style name="roundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp60</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="cornerRadius">@dimen/dp24</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundColor">@color/blueWhale</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/blueWhale</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="fontFamily">@font/ibm_plex_sans</item>
    </style>


    <style name="LoginHeaderTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
    </style>

    <style name="LabelTextViewStyle">
        <item name="android:gravity">start</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>

    </style>

    <style name="EditTextViewAndButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/blueWhale</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
    </style>

    <style name="UserNameStyle">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blueWhale</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
    </style>

    <style name="UserProfileTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blueWhale</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
    </style>

    <style name="BoldTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
    </style>

    <style name="smallTextViewStyle">
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:colorAccent">@color/white</item>
    </style>

    <style name="WelcomeScreenContents">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ibm_plex_sans_semi_bold</item>
    </style>

    <style name="HomeContentMargin">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">13dp</item>
    </style>

    <style name="FeedsNumberStyle">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blueWhale</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FeedsMessageStyle">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/darkGrayishAzure</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="feedsFrameLayoutStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginEnd">13dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ActivityCountTextViewStyle">
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/activity_count_text_color</item>
        <item name="fontFamily">@font/ibm_plex_sans_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RewardsImageViewStyle">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:src">@drawable/rewards</item>
    </style>

    <style name="ShareImageViewStyle">
        <item name="android:paddingStart">12dp</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:src">@drawable/share</item>
    </style>

    <style name="CommentsImageViewStyle">
        <item name="android:paddingStart">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:src">@drawable/briefcase_icon</item>
    </style>

    <style name="CollectionsImageViewStyle">
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:src">@drawable/collections</item>
    </style>

    <style name="HighlightedTextViewStyle">
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
        <item name="android:textColor">@color/darkGrayishAzure</item>
    </style>

    <style name="HeaderRightSideTextViewStyle">
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/light_grayish_blue</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ListBottomButtonStyle">
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/you_are_caught_up</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:drawableEnd">@drawable/blue_up_arrow</item>
        <item name="android:background">@drawable/border_circular_blue</item>
    </style>

    <style name="UserProfilePageTextStyle">
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/blueWhale</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="customSpinnerDialog">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/blueWhale</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">7dp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:layout_width">match_parent</item>
        <item name="android:divider">@color/spinner_items_divider</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_marginEnd">14dp</item>
    </style>

    <style name="RewindAudioImageViewStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:src">@drawable/ic_rewind_15</item>
    </style>

    <style name="ForwardAudioImageViewStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:src">@drawable/ic_forward_30</item>
    </style>

    <style name="PlayAudioImageViewStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:src">@drawable/ic_play_control</item>
    </style>

    <style name="SeekBarStyle">
        <item name="android:thumb">@drawable/seekbar</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">9dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="EditTextViewAndButtonStyle1">
        <item name="android:textSelectHandle">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/blueWhale</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
    </style>

    <style name="EditTextViewAndButtonStyle2">
        <item name="errorTextAppearance">@style/error_appearance</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="MenuActive" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_semi_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MenuInactive" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
        <item name="android:textColor">@color/blueWhale</item>
    </style>

    <style name="SignInButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@drawable/sign_in_background_with_state</item>
        <item name="android:background">@drawable/sign_in_button_shape</item>
        <item name="android:textColor">@drawable/sign_in_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/ibm_plex_sans</item>
    </style>

    <style name="MyTitleStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/blueWhale</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="fontFamily">@font/ibm_plex_sans</item>
    </style>
    <style name="Theme.App.Dialog.FullScreen" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/dp10</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CustomDialog.Rounded</item>
        <item name="colorSurface">@color/white</item>
    </style>
    <style name="MyRounded.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CustomDialog.Rounded</item>
        <item name="colorSurface">@color/white</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CustomDialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp10</item>
    </style>
<!--
    <style name="NormalText" parent="">
        <item name="fontFamily">rounded</item>
        <item name="cornerSize">@dimen/dp10</item>
    </style>-->
</resources>